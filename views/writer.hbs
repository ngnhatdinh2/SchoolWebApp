{{#section 'css'}}
{{/section}}

{{#section 'js'}}
{{/section}}

<div class="container mt-4">
    <div class="row">
        <div class="col ">
            <div class="card" style="width: 15rem;">
                <div class="card-header">
                    Chức năng
                </div>
                <ul class="list-group list-group-flush">
                    {{#each lcActionList}}
                    <li class="list-group-item {{#if isActive}}active{{/if}}"><a href="{{href}}">{{action}}</a></li>
                    {{/each}}
                </ul>
            </div>

        </div>
        <div class="col-9">

            <div class="card mb-4">
                <div class="card-header">
                    Danh sách bài viết
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Lượt xem</th>
                                <th scope="col">Ngày đăng</th>
                                <th scope="col">Danh mục</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each posts}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{title}} </td>
                                <td>{{view}}</td>
                                <td>{{formatDate publish_date}}</td>
                                <td>{{category_name}}</td>
                                <td>{{#formatStatus status}}{{this}}{{/formatStatus}}</td>
                                <td>{{#isPublished id status}}{{this}}{{/isPublished}}
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>