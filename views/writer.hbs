{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">

<link rel="stylesheet" type="text/css" href="/css/DanhSachBaiViet.css">
<link rel="stylesheet" type="text/css" href="/css/style1.css">
{{/section}}

{{#section 'js'}}
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
{{/section}}

<div class="container mt-4">
    <h1 class="display-1 text-center mb-4 mt-5" style="color: gray; font-size:4rem;">QUẢN LÝ BÀI VIẾT</h1>
    <div class="row">
        <div class="col ">
            <div class="card" style="width: 15rem;">
                <div class="card-header">
                    <h3>Chức năng</h3>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each lcActionList}}
                    <li class="list-group-item {{#if isActive}}active{{/if}}"><a href="{{href}}">{{action}}</a></li>
                    {{/each}}
                </ul>
            </div>

        </div>
        <div class="col-9">

            <div class="card mb-4">
                <div class="card-header">
                    <h3>Danh sách bài viết</h3>
                </div>
                <div class="card-body">
                    <table id="table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tiêu đề</th>
                                <th scope="col">Lượt xem</th>
                                <th scope="col">Ngày đăng</th>
                                <th scope="col">Danh mục</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each posts}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{title}} </td>
                                <td>{{view}}</td>
                                <td>{{formatDate publish_date}}</td>
                                <td>{{category_name}}</td>
                                <td>{{#formatStatus status}}{{this}}{{/formatStatus}}</td>
                                <td>{{#isPublished id status}}{{this}}{{/isPublished}}
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>