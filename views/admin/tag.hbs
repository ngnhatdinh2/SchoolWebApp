
  <div class="dash">
          <main class="dash-content">
             <main class="dash-content">
                <div class="container-fluid">
                    <h1 class="dash-title">TAG</h1>
                    <div class="row">
                        <div class="col-lg">
                            <div class="card spur-card">
                                <div class="card-header bg-success text-white">
                                    <div class="spur-card-icon">
                                        <i class="fas fa-table"></i>
                                    </div>
                                    <div class="spur-card-title">DATA</div>
                                </div>
                                <div class="card-body ">
                                    <form action="category" method="POST">
                                    <table class="table table-hover table-in-card">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">name</th>
                                                <th scope="col">total posts</th>
                                                <th scope="col">delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each tags}}
                                            <tr>
                                                <th scope="row">{{id}}</th>
                                                <td><input type="text" name="name-{{id}}" value="{{name}}"/></td>
                                                <td>{{posts}}</td>
                                                <td>
                                                    <input name="delete-{{id}}" class="form-check-input" type="checkbox">
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                    <input type="button" class="btn btn-primary mt-5 float-right" value="submit">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
          </main>
  </div>
