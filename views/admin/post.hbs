        <div class="dash-app">
             
          <main class="dash-content">
             <main class="dash-content">
                <div class="container-fluid">
                    <a href="#!" class="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </a>
                    <h1 class="dash-title">POSTS</h1>
                    <div class="row">
                        <div class="col-lg ">
                            <div class="card spur-card ">
                                <div class="card-header bg-primary text-white">
                                    <div class="spur-card-icon">
                                        <i class="fas fa-table"></i>
                                    </div>
                                    <div class="spur-card-title">Posts</div>
                                </div>
                                <div class="card-body ">
                                    <table class="table table-hover table-in-card">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">title</th>
                                                <th scope="col">author</th>
                                                <th scope="col">status</th>
                                                <th scope="col">view</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each posts}}
                                            <tr>
                                                <form action="post" method="post">
                                                    <input type="hidden" name="id" value={{id}}>
                                                    <th scope="row">{{id}}</th>
                                                    <td>{{title}}</td>
                                                    <td>{{author}}</td>
                                                    <td>
                                                        {{status}}
                                                    </td>
                                                    <td>{{view}}</td>
                                                    <td>
                                                        {{!-- {{#if disabled}}
                                                        <button disabled=true onclick="function(){console.log("ngu")}" type="button" class="btn btn-primary">publish</button>
                                                        {{else}}
                                                        <button type="button" class="btn btn-primary">publish</button>
                                                        {{/if}} --}}
                                                        <div class="btn-group" role="group" aria-label="Basic example">
                                                            <input name="method" value="{{#if banned }}Unban{{else}}Ban{{/if}}" type="submit" class="btn btn-warning">
                                                            <input name="method" value="Publish" type="submit" class="btn btn-primary" {{#if disabled}} disabled {{/if}}>
                                                            <input name="method" value="Delete" type="submit" class="btn btn-danger">
                                                        </div>
                                                    </td>
                                                </form>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
          </main>
